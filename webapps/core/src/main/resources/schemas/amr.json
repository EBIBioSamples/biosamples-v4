{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "amr",
  "description": "Representation for an AMR table entry",
  "definitions": {
    "is_dilution_method": {
      "properties": {
        "laboratory_typing_method.category": {
          "enum":[
            "dilution",
            "diffusion"
          ]
        }
      }
    },
    "amr_entry": {
      "$id": "#amr_entry",
      "type": "object",
      "properties": {
        "species": {
          "type": "string"
        },
        "antibiotic": {
          "type": "string"
        },
        "breakpoint_version": {
          "type": "string"
        },
        "resistance_phenotype": {
          "type": "string",
          "enum":[
            "intermediate",
            "susceptible",
            "sensitive",
            "resistant",
            "non-susceptible",
            "not-defined"
          ]
        },
        "measurement_sign": {
          "type": "string",
          "enum": [">", "<", "=", "<=", ">="]
        },
        "measurement": {
          "type": "number",
          "if": { "$ref": "#/definitions/is_dilution_method"},
          "then": {
            "minimum": 0.01,
            "maximum": 2048
          },
          "else": {
            "minimum": 6,
            "maximum": 99
          }
        },
        "measurement_units": {
          "type": "string",
          "if": { "$ref": "#/definitions/is_dilution_method"},
          "then":  {
            "enum":[
              "mg/L"
            ]
          },
          "else": {
            "enum":[
              "mm"
            ]
          }
        },
        "laboratory_typing_method": {
          "type": "object",
          "properties": {
            "category": {
              "enum": ["dilution", "diffusion"]
            },
            "method": {
              "type": "string"
            }
          },
          "required": [
            "category",
            "method"
          ],
          "if": { "$ref": "#/definitions/is_dilution_method"},
          "then": {
            "properties": {
              "method": {
                "enum": [
                  "Broth dilution",
                  "Microbroth dilution",
                  "Agar dilution"
                ]
              }
            }
          },
          "else": {
            "properties": {
              "method": {
                "enum": [
                  "Disc-diffusion",
                  "Neo-sensitabs",
                  "Etest"
                ]
              }
            }
          }
        },
        "platform": {
          "type": "string",
          "enum": [
            "Microscan",
            "Phoenix",
            "sensititer",
            "Vitek"
          ]
        },
        "laboratory_typing_method_version_or_reagent": {
          "type": "string"
        },
        "vendor": {
          "type": "string"
        },
        "testing_standard": {
          "type": "string",
          "enum": [
            "CLSI",
            "EUCAST",
            "SFM",
            "BSAC",
            "DIN",
            "SIR",
            "WRG",
            "NCCLS",
            "missing"
          ]
        },
        "ast_standard": {
          "type": "string",
          "enum": [
            "CLSI",
            "EUCAST",
            "CA-SFM",
            "BSAC",
            "DIN",
            "SIR",
            "WRG"
          ]
        },
      },
      "required": [
        "antibiotic",
        "resistance_phenotype",
        "measurement_sign",
        "measurement",
        "measurement_units",
        "laboratory_typing_method"
      ]
    }
  },
  "type": "array",
  "uniqueItems": true,
  "minItems": 1,
  "items": {
    "$ref": "#amr_entry"
  }
}
