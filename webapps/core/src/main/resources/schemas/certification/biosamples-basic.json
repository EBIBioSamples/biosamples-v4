{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "biosamples-schema.json",
  "additionalProperties": true,
  "required": [
    "name",
    "characteristics"
  ],
  "title": "sample",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "accession": {
      "type": "string"
    },
    "characteristics": {
      "type": "object",
      "required": [
        "INSDC status"
      ],
      "properties": {
        "additionalProperties": true,
        "INSDC status": {
          "type": "array",
          "items": {
            "properties": {
              "text": {
                "type": "string",
                "enum": [
                  "public", "live"
                ]
              }
            },
            "required": [
              "text"
            ]
          }
        }
      }
    }
  }
}
